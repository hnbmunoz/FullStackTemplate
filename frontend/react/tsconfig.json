{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "archive"
  ]
}